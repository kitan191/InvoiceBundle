{% extends "ClarolineCoreBundle:Desktop:layout.html.twig" %}

{% block title %}{{ parent() ~ ' - ' ~ "invoice" | trans({}, "platform") | striptags | raw }}{% endblock %}

{% block breadcrumb %}
    {{
        macros.desktopBreadcrumbs([
            {
                'name': 'formalibre'|trans({}, 'platform'),
                'href':  path('invoice_show_all')
            }
        ])
    }}
{% endblock %}
{% block section_content %}
    <div class="panel-heading">
        {{ 'my_workspaces'|trans({}, 'invoice') }}
    </div>
    <div class="panel panel-body">
        <table class="table table-striped table-bordered table-condensed">
            <thead>
                <tr>
                    <th> {{ 'name'|trans({}, 'platform') }} </th>
                    <th> {{ 'code'|trans({}, 'platform') }} </th>
                    <th> {{ 'expiration_date'|trans({}, 'invoice') }} </th>
                    <th> {{ 'max_users'|trans({}, 'invoice') }} </th>
                    <th> {{ 'max_resources'|trans({}, 'invoice') }} </th>
                    <th> {{ 'max_storage'|trans({}, 'invoice') }} </th>
                    <th> {{ 'increase_expiration_date'|trans({}, 'invoice') }} </th>
                </tr>
            </thead>
            <tbody>
                {% for workspace in data %}
                    <tr>
                        <th> {{ workspace['workspace'].name }} </th>
                        <th> {{ workspace['workspace'].code }} </th>
                        <th> {{ workspace['shared_workspace'].getExpDate().getTimeStamp()|date('d/m/Y') }} </th>
                        <th> {{ workspace['shared_workspace'].getMaxUser() }} </th>
                        <th> {{ workspace['shared_workspace'].getMaxRes() }} </th>
                        <th> {{ workspace['shared_workspace'].getMaxStorage() }} </th>
                        <th>

                        {% if workspace['shared_workspace'].isTest() %}
                            <a href="{{ path('renew_test_workspace', {sws: workspace['shared_workspace'].getId()})}}" class="btn btn-primary">
                                {{ 'upgrade'|trans({}, 'invoice') }}
                            </a>
                        {% else %}
                        {% endif %}
                        </th>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </br>
        <a class="btn btn-primary" href="{{ path('workspace_products_form') }}">{{ 'add'|trans({}, 'platform') }} </a>
    </div>
{% endblock %}
{% block javascripts %}
    {{ parent() }}
{% endblock %}
