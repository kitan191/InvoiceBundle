{% extends "ClarolineCoreBundle:Administration:layout.html.twig" %}

{% block title %}
    {{ parent() ~ ' - ' ~ 'shared_workspace_creation' | trans({}, 'invoice') | striptags | raw }}
{% endblock %}

{% block breadcrumb %}
    {{
        macros.breadcrumbs([
            {
                'icon': 'fa fa-cog',
                'name': 'administration'|trans({}, 'platform'),
                'href': path('claro_admin_index')
            },
            {
                'name': 'formalibre_shared_workspaces_admin_tool'|trans({}, 'tools'),
                'href': path('formalibre_admin_shared_workspaces_admin_tool_index')
            },
            {
                'name': 'shared_workspace_creation'|trans({}, 'invoice'),
                'href': ''
            }
        ])
    }}
{% endblock %}

{% block section_content %}

    <div class="panel-heading">
        <h3 class="panel-title">
            {{ 'shared_workspace_creation'|trans({}, 'invoice') }}
        </h3>
    </div>
    <form action="{{ path('formalibre_admin_shared_workspace_create') }}" 
          id="shared-workspace-create-form"
          method="POST"
          {{ form_enctype(form) }}
          novalidate
    >
        <div class="panel-body">
            {{ form_widget(form) }}
        </div>
        <div class="panel-footer">
            <button type="submit" class="btn btn-primary">
                {{ 'ok'|trans({}, 'platform') }}
            </button>
            <a href="{{ path('formalibre_admin_shared_workspaces_admin_tool_index') }}"
               class="btn btn-default" 
               role="button"
            >
                {{ 'cancel'|trans({}, 'platform') }}
            </a>
        </div>
    </form>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script type="text/javascript"
            src="{{ url('bazinga_jstranslation_js', { 'domain': 'invoice' }) }}"
    >
    </script>
    <script src='{{ asset('bundles/formalibreinvoice/js/sharedWorkspaceCreateForm.js') }}'
            type="text/javascript"
    >
    </script>
{% endblock %}
