<div class="panel panel-default">
    <div class="panel-body">
        <a href="{{ path('workspace_products_form') }}" class="btn btn-primary"> {{ 'new'|trans({}, 'platform') }} </a>
        </br>
    </div>
    <div class="panel-body">
        <table class="table table-striped table-bordered table-condensed">
            <thead>
                <tr>
                    <th> {{ 'name'|trans({}, 'platform') }} </th>
                    <th> {{ 'code'|trans({}, 'platform') }} </th>
                    <th> {{ 'expiration_date'|trans({}, 'invoice') }} </th>
                    <th> {{ 'product_name'|trans({}, 'invoice') }} </th>
                    <th> {{ 'increase_expiration_date'|trans({}, 'invoice') }} </th>
                </tr>
            </thead>
            <tbody>
                {% for workspace in workspace_data %}
                    <tr>
                        {% set workspaceLink = 'http://' ~ config.getParameter('formalibre_commercial_url') ~ '/workspaces/' ~ workspace['shared_workspace'].getRemoteId() ~ '/open/tool/home' %}
                        <th> {% if workspace['workspace'].error is not defined %} <a href="{{ workspaceLink }}"> {{ workspace['workspace'].name }} {% endif %} </a> </th>
                        <th> {% if workspace['workspace'].error is not defined %} {{ workspace['workspace'].code }} {% endif %} </th>
                        <th> {{ workspace['shared_workspace'].getExpDate().getTimeStamp()|date('d/m/Y') }} </th>
                        <th>
                            {% if workspace['product'] is defined %}
                                <a href="{{ path('show_product', {'product': workspace['product'].getId()}) }}"> {{ workspace['product'].getCode() }} </a>
                            {% endif %}
                        </th>
                        <th> <a href="{{ path('renew_test_workspace', {'remoteId': workspace['shared_workspace'].getRemoteId()}) }}"> {{ 'renew'|trans({}, 'invoice')}} </a> </th>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
</div>
