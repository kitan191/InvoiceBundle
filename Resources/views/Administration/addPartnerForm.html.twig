{% extends "FormaLibreInvoiceBundle:Administration:modalForm.html.twig" %}

{% block header %}
    {{ 'add_partner'|trans({}, 'invoice') }}
{% endblock %}
{% block form %}
<form
    role="form"
    class="form-horizontal"
    action="{{ path('formalibre_partner_create') }}"
    method="post" {{ form_enctype(form) }}
    id="form_add_partner"
>
    <div class="modal-body">
        {{ form_widget(form) }}
    </div>
    <div class="modal-footer">
        <button type="submit" id="submit-modal-form" class="btn btn-primary" aria-hidden="true">{{ 'create'|trans({}, 'platform') }}</button>
        <div class="btn btn-default" data-dismiss="modal" aria-hidden="true">{{ 'cancel'|trans({}, 'platform') }}</div>
    </div>
</form>
{% endblock %}
