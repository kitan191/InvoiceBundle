{% extends "ClarolineCoreBundle:Administration:layout.html.twig" %}

{% block title %}{{ parent() ~ ' - ' ~ 'invoice' | trans({}, 'invoice') | striptags | raw }}{% endblock %}

{% block breadcrumb %}
    {{
        macros.breadcrumbs([
            {
                'icon': 'fa fa-cog',
                'name': 'administration'|trans({}, 'platform'),
                'href': path('claro_admin_index')
            },
            {
                'name': 'products'|trans({}, 'invoice'),
                'href': ''
            }
        ])
    }}
{% endblock %}

{% block section_content %}

    <div class="panel-heading">
        <h3 class="panel-title">{{ 'products'|trans({}, 'invoice') }}</h3>
    </div>
    <div class="list-group">
        {% for code, product in products %}
            <a class="list-group-item" href="{{ path('formalibre_show_products', {'code': code}) }}">
                {{ product|trans({}, 'invoice') }}
            </a>
        {% endfor %}
    </div>
{% endblock %}
