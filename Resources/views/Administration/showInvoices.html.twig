{% macro renderPager(search, pager, order, direction) %}
    {% if search == '' %}
    {{
        pagerfanta(
            pager,
            'twitter_bootstrap_translated',
            {
                'proximity' : 1,
                'routeName': 'admin_invoice_open_invoice'
            }
        )
    }}
    {% else %}
        {{
            pagerfanta(
                pager,
                'twitter_bootstrap_translated',
                {
                    'proximity' : 1,
                    'routeName': 'admin_invoice_open_invoice_search',
                    'routeParams': {'search': search }
                }
            )
        }}
    {% endif %}
{% endmacro %}
{% from _self import renderPager %}
{% extends "ClarolineCoreBundle:Administration:layout.html.twig" %}

{% block title %}{{ parent() ~ ' - ' ~ 'invoice' | trans({}, 'invoice') | striptags | raw }}{% endblock %}

{% block breadcrumb %}
    {{
        macros.breadcrumbs([
            {
                'icon': 'fa fa-cog',
                'name': 'administration'|trans({}, 'platform'),
                'href': path('claro_admin_index')
            },
            {
                'name': 'invoices'|trans({}, 'invoice'),
                'href': path('admin_invoice_index')
            },
            {
                'name': 'show'|trans({}, 'invoice'),
                'href': ''
            }
        ])
    }}
{% endblock %}

{% block section_content %}
    <div class="panel-heading">
        <h3 class="panel-title">{{ 'invoices'|trans({}, 'invoice') }}</h3>
    </div>
    <div class="panel-body">
        <div class="row">
            <div class="col-md-4">
                 <div class="input-group">
                    <input class="form-control" type="text" id="search-items-txt" placeholder="{{ 'search'|trans({}, 'platform') }}" value={{ search }}>
                    <span class="input-group-btn">
                        <button class="filter btn btn-default" type="button" id="search-button">
                            <i class="fa fa-search"></i>
                        </button>
                    </span>
                </div>
            </div>
        </div>
         <div class="table-responsive">
            <table class="table table-striped table-bordered table-condensed">
                <thead>
                    <tr>
                        <th>
                            {{ 'amount'|trans({}, 'invoice') }}
                        </th>
                        <th>
                            {{ 'date'|trans({}, 'platform') }}
                        </th>
                        <th>
                            {{ 'username'|trans({}, 'platform') }}
                        </th>
                        <th>
                            {{ 'invoice'|trans({}, 'invoice') }}
                        </th>
                    </tr>
                </thead>
                <tbody>
                    {% for order in pager.currentPageResults %}
                    <tr>
                        {% set instruction = order.getPaymentInstruction() %}
                        {% if instruction is not null %}
                            {% set payment = instruction.getPayments()|first() %}
                        {% else %}
                            {% set payment = null %}
                        {% endif %}
                        <td> {% if payment is not null %} {{ payment.getApprovedAmount() }} {% else %} {{ 'free'|trans({}, 'invoice')}} {% endif %} </td>
                        <td> {{ order.getCreationDate()|intl_date_format() }} </td>
                        <th> {{ order.getOwner().getUsername() }} </th>
                        <th> <a href="{{ path('admin_invoice_show', {'order': order.getId() })}}"> {{ 'invoice'|trans({}, 'platform') }} </a>
                    </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
    {% if pager.getNbPages() > 1 %}
         {{ renderPager(search, pager) }}
    {% endif %}
    <div class="panel-footer">

    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src='{{ asset('bundles/clarolinecore/js/table.js') }}' type="text/javascript"></script>
    <script>
        parameters = {};
        parameters.route = {};
        parameters.route.action = {};
        parameters.route.normal = {"route": "admin_invoice_open_pending", "parameters": {} };
        parameters.route.search = {"route": "admin_invoice_open_pending_search", "parameters": {} };
        Claroline.Table.initialize(parameters);
    </script>
{% endblock %}
