{% extends "FormaLibreInvoiceBundle:Administration:modalForm.html.twig" %}

{% block header %}
    {{ 'edit_product_form'|trans({}, 'invoice') }}
{% endblock %}
{% block form %}
<form
    role="form"
    class="form-horizontal"
    action="{{ path('formalibre_product_edit', {'product': product.getId()}) }}"
    method="post" {{ form_enctype(form) }}
    id="formalibre_product_edit"
>
    <div class="modal-body">
        {{ form_widget(form) }}
    </div>
    <div class="modal-footer">
        <button type="submit" id="submit-modal-form" class="btn btn-primary" aria-hidden="true">{{ 'edit'|trans({}, 'platform') }}</button>
        <div class="btn btn-default" data-dismiss="modal" aria-hidden="true">{{ 'cancel'|trans({}, 'platform') }}</div>
    </div>
</form>
{% endblock %}
