{% extends "ClarolineCoreBundle:Administration:layout.html.twig" %}

{% block title %}{{ parent() ~ ' - ' ~ 'invoice' | trans({}, 'invoice') | striptags | raw }}{% endblock %}

{% block breadcrumb %}
    {{
        macros.breadcrumbs([
            {
                'icon': 'fa fa-cog',
                'name': 'administration'|trans({}, 'platform'),
                'href': path('claro_admin_index')
            },
            {
                'name': 'invoices'|trans({}, 'invoice'),
                'href': path('claro_admin_index')
            },
            {
                'name': 'invoice'|trans({}, 'invoice'),
                'href': ''
            }
        ])
    }}
{% endblock %}

{% block section_content %}

    <div class="panel-heading">
        <h3 class="panel-title">{{ 'invoices'|trans({}, 'platform') }}</h3>
    </div>
    <div class="list-group">
        <a class="list-group-item" href="{{ path('admin_invoice_open_pending') }}">
            {{ 'pending'|trans({}, 'invoices') }}
        </a>
        <a class="list-group-item" href="{{ path('admin_invoice_open_invoice') }}">
            {{ 'invoices'|trans({}, 'invoices') }}
        </a>
        <a class="list-group-item" href="{{ path('admin_invoice_users') }}">
            {{ 'users'|trans({}, 'platform') }}
        </a>
    </div>
{% endblock %}
